{
  "name": "@jahia/search-ui-jahia-connector",
  "version": "1.0.0",
  "description": "A Search UI connector for Jahia GraphQL Search API",
  "license": "MIT",
  "main": "dist",
  "module": "jahia",
  "author": "Jahia Team",
  "sideEffects": false,
  "directories": {
    "test": "__tests__",
    "lib": "dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com:Jahia/search-ui-jahia-connector.git"
  },
  "scripts": {
    "build": "yarn lint && babel src --out-dir dist --ignore './src/**/*.test.js'",
    "build:nolint": "babel src --out-dir dist --ignore './src/**/*.test.js'",
    "build:watch": "yarn lint && babel src --out-dir dist --ignore '**/*.test.js' --watch &",
    "build:analyze": "yarn build --analyze",
    "build:production": "yarn build -p",
    "build:production-analyze": "yarn build -p --analyze",
    "test": "jest",
    "lint": "eslint --ext js .",
    "lint:fix": "eslint --ext js --fix ."
  },
  "bugs": {
    "url": "https://github.com:Jahia/search-ui-jahia-connector.git/issues"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-transform-classes": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.5.0",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/runtime": "^7.5.4",
    "@jahia/eslint-config": "^1.0.0-beta.20190920132338",
    "axios": "^0.19.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.9.0",
    "babel-plugin-lodash": "^3.3.4",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-jest": "^22.9.0",
    "eslint-plugin-react": "^7.14.2",
    "jest": "^24.9.0",
    "jest-teamcity-reporter": "github:mhodgson/jest-teamcity-reporter",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3"
  },
  "dependencies": {
    "graphql": "^14.5.4"
  }
}
